<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3 class="modal-title" id="myModalLabel">Nuevo Producto</h3>
</div>
<%= nested_form_for @producto, :remote => true do |f| %>
<div class="modal-body">
<div class="field">
	<%= f.label :nombre %>
	<%= f.text_field :nombre %>
	<%= f.label :nombre_generico, "Nombre Genérico" %>
	<%= f.text_field :nombre_generico %>
	<%= f.label :codigo, "Código" %>
	<%= f.text_field :codigo %>
	<%= f.label :categoria %>
	<%= f.text_field :categoria%>
	<%= f.label :casa_comercial %>
	<%= f.text_field :casa_comercial%>
	<table class="table">
		<thead>
			<tr>
				<th>Fecha Caducidad</th>
				<th>Cantidad</th>
				<th>Lote</th>
				<th>P.Compra</th>
				<th>Ganancia</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%= f.fields_for :ingreso_productos, :wrap => false do |p| %>
				<tr class="fields">
					<td><%= p.text_field :fecha_caducidad, :class => "datepicker" %></td>
					<td><%= p.text_field :cantidad %></td>
					<td><%= p.text_field :lote %></td>
					<td><%= p.text_field :precio_compra %></td>
					<td><%= p.number_field :ganancia, :step => "any" %></td>
					<td><%= p.link_to_remove '', :class => "delete_destroy" %></td>
				</tr>
			<% end %>
			<tr><td><%= f.link_to_add "Compra", :ingreso_productos, :class => "nuevo_new"%></td>
			</tr>
		</tbody>
	</table>
</div>

</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= f.submit 'Guardar', class: "btn btn-primary"%>
</div>
<% end %>
