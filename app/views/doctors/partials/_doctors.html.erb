<% @doctores.each do |doctor|  %>
<li class= "col-md-4 list">
	<div class="doctor">
		<h5>
			<span><strong><%=  doctor.nombre %></strong></span>
			<span>
				<%= link_to "", doctor, method: :delete, data: { confirm: 'Esta seguro?' }, class: "ttip fa fa-times-circle pull-right text-muted",:rel=> 'tooltip', :title=>'Eliminar' %>
			</span>
			<span><%= link_to "", edit_doctor_path(doctor), {:remote => true, :rel=> 'tooltip', :title=>'Editar','data-toggle' =>  "modal", 'data-target' => '#myModal', class: "ttip fa fa-edit pull-right text-muted"} %></span>
		</h5>
		<h5><%= doctor.especialidad  %> / <span class="text-muted">Atiende: <%=  doctor.cantidad_turno %> turnos</span></h5>
		<p>Turnos:
			<small><%= link_to "Hoy",turnos_dia_doctor_path(doctor),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal'}%></small> |
			<small><%= link_to "MaÃ±ana",turnos_manana_doctor_path(doctor),{:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal'}%></small>
		</p>
	</div>
</li>
<% end %>
