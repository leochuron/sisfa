<% @doctores.each do |doctor|  %>
<li class= "ingresado-item items">
	<div class="doctor">
		<span class="internado-name">
			<span <%= 'style= text-decoration:line-through;' if doctor.suspendido %>><%=  doctor.cliente.nombre %></span>
		</span>
		<span class="internado-hc">
			<%= doctor.especialidad  %>
		</span>
		<div class="pull-right">
			<span class="opcions">
				<span class="cama-number">
					<small class="text-muted">
						<% if doctor.cantidad_turno == 0 %>
						No atiende turnos
						<% else %>
						#Turnos: <%= doctor.cantidad_turno %>
						<% end %>
					</small>
				</span>
				<span class="menu">
					<ul class="list-inline">
						<li class="btn-circle">
							<% if doctor.suspendido %>
							<%= link_to '', suspender_doctor_path(doctor), method: :post, data: { confirm: 'Esta seguro?' },:rel => 'tooltip', :title => 'Activar', class: "ttip fa fa-thumbs-up text-muted text-success"%>
							<% else %>
							<%= link_to '', suspender_doctor_path(doctor), method: :post, data: { confirm: 'Esta seguro?' },:rel => 'tooltip', :title => 'Suspender', class: "ttip fa fa-thumbs-down"%>
							<% end %>
						</li>
						<li class="btn-circle">
							<%= link_to "", doctor, method: :delete, data: { confirm: 'Esta seguro?' }, class: "ttip fa fa-times-circle text-danger",:rel=> 'tooltip', :title=>'Eliminar' %>
						</li>
					</ul>
				</span>
			</span>
			<span class="ingresado-type">
				<%= link_to "", edit_doctor_path(doctor), {:remote => true, :rel=> 'tooltip', :title=>'Editar','data-toggle' =>  "modal", 'data-target' => '#myModal', class: "ttip fa fa-user-md text-info"} %>
			</span>
		</div>
	</div>
</li>
<% end %>
