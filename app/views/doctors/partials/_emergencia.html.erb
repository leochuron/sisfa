<% unless @emergencias.empty?  %>
<h4 class="fa fa-plus-square text-danger"> Emergencia</h4>
<ul class="list-group">
	<% @emergencias.each do |t|  %>
	<li class="list-group-item item-turnos" <%= 'style= background-color:#7CC576;color:#fff;' if t.registrado %>>
		<ul class="list-inline text-center">
			<li class=" col-md-2 col-xs-2 datos-turno"><spam>E</spam></li>
			<li class=" col-md-8 col-xs-8 border-lines">
				<h4><%=t.paciente.cliente.nombre%></h4>
			</li>
		</ul>
		<% unless t.registrado %>
		<span class="show-menu">
			<span class="fa fa-chevron-right"></span>
		</span>
		<ul class="list-group-submenu">
			<li class="list-group-submenu-item"><%= link_to '', t.paciente, :rel => 'tooltip', :title => 'Historia Clinica', :target => "_blank", class: "fa fa-h-square"%></li>
			<li class="list-group-submenu-item danger"><%= link_to "", edit_paciente_emergencia_registro_path(t.paciente, t), { :rel=> 'tooltip', :title=>'Llenar Diagnostico', class: "fa fa-plus-square"} %></li>
		</ul>	
		<% end %>
	</li>
	<% end %>
</ul>
<% end %>
