<div class="container">
	<div class="row title-history">
		<h2 class="text-center">Administracion de Doctores</h2>
	</div>
	<div class="row info-paciente">
		<div class="row acciones">
			<div class="col-md-3">
				<%= link_to 'Nuevo', new_doctor_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', class: "nuevo_new"}  %>
				<%= link_to ' Listado de hoy',doctors_imprimir_listado_path(:format => :pdf), class: "print_button", :target => "_blank" %>	
			</div>
			<div class="col-md-3">
				<%= form_tag emergencia_parte_mensuals_reporte_path(:format => 'xls'), method: :get do %>
				<div class="input-group field fix-margin">
					<%= text_field_tag :fecha, params[:fecha],:class =>"datepicker_month", :placeholder => "Reporte emergencia", :required => true%>
					<span class="input-group-btn">
						<%= submit_tag "Ir", name: nil, :class => "btn btn-info" %>
					</span>
				</div>
				<% end %>
			</div>
			<div class="col-md-3">
				<%= form_tag jornada_morbilidads_reporte_path(:format => 'xls'), method: :get do %>
				<div class="input-group field fix-margin">
					<%= text_field_tag :fecha, params[:fecha],:class =>"datepicker", :placeholder => "Reporte morbilidad", :required => true%>
					<span class="input-group-btn">
						<%= submit_tag "Ir", name: nil, :class => "btn btn-info" %>
					</span>
				</div>
				<% end %>
			</div>
			<div class="col-md-3">
				<%= form_tag jornada_preventivas_reporte_path(:format => 'xls'), method: :get do %>
				<div class="input-group field fix-margin">
					<%= text_field_tag :fecha, params[:fecha],:class =>"datepicker", :placeholder => "Reporte preventiva", :required => true%>
					<span class="input-group-btn">
						<%= submit_tag "Ir", name: nil, :class => "btn btn-info" %>
					</span>
				</div>
				<% end %>
			</div>		
			<div class="col-md-3">
				<div class="input-icon-md icon-addon addon-md">
					<input type="search" id="input-search" class="form-control" placeholder="Buscar Doctor..." ><i class="fa fa-search"></i>
					<i class="fa fa-search"></i>
				</div>
			</div>
		</div>
		<br>
		<legend>Doctores Registrados</legend>
		<ul class="main searchable-container internados grid all-doctors">
			<%= render "doctors/partials/doctors", :doctores => @doctores%>
		</ul>
	</div>	
</div>
