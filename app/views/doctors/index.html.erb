<div class="container">
	<div class="row title-history">
		<h2 class="fix-margin">Administracion Doctores</h2>
	</div>
	<div class="row info-paciente">
		<div class="search">
			<div class="well well-sm">
				<strong>Nuevo: </strong>
				<div class="btn-group">
					<%= form_for @doctor, :html => {:class => "form-inline"} do |f| %>
					<div class="form-group">
						<%= f.label :nombre, class: "sr-only"  %>
						<%= f.text_field :nombre, class: "form-control", placeholder: "Nombre" %>
					</div>
					<div class="form-group">
						<%= f.label :especialidad, class: "sr-only" %>
						<%= f.text_field :especialidad, class: "form-control", placeholder: "Especialidad" %>
					</div>
					<div class="form-group">
						<%= f.label :cantidad_turno, class: "sr-only" %>
						<%= f.text_field :cantidad_turno, class: "form-control", placeholder: "Cantidad de turnos" %>
					</div>
					<%= f.submit :Guardar, class: "btn btn-info"  %>
					<% end %>
				</div>
			</div>
		</div>
		<% @doctores.each do |d|  %>
		<div class="col-md-4">
			<h4>
				<span><%= d.nombre %></span>
				<span class="fa fa-thumbs-down pull-right text-muted"></span>
				<span class="fa fa-times-circle pull-right text-muted"></span>
				<span><%= link_to "", turnos_dia_doctor_path(d, format: :pdf), class: "fa fa-print pull-right text-muted", :target => "_blank" %>
				</span>
			</h4>
			<h5><%= d.especialidad  %> </h5>
			<p>Turnos:
				<small><%= link_to "Hoy",turnos_dia_doctor_path(d)%></small> |
				<small><%= link_to "Manana",turnos_manana_doctor_path(d)%></small>
			</p>
		</div>
		<% end %>
	</div>	
</div>

