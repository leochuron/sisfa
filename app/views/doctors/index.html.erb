<h3>Crear Doctor</h3>
<%= form_for @doctor do |f| %>
<div class="field">
	<%= f.label :nombre  %>
	<%= f.text_field :nombre  %>
	<%= f.label :especialidad  %>
	<%= f.text_field :especialidad  %>
	<%= f.submit :Guardar, class: "btn btn-success"  %>
</div>
<% end %>
<h3>Doctores</h3>
<% @doctores.each do |d|  %>
<div class="col-md-3 info-paciente">
	<h4><%= d.nombre %></h4>
	<h4><%= d.especialidad %></h4>
</div>
<% end %>

