<%- if @turno.errors.any? %>
  $('#content_modal').html('<%= escape_javascript(render('turno')) %>');
  window.Helpers.ButtonsHelper.init();
  window.Helpers.FormsHelper.init()
  <%- @turno.errors.full_messages.each do |msg|%>
    alertify.error("<%=j msg %>");
  <%- end %>
<%- else %>
  $("#myModal").modal("hide");
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  alertify.success("Turno Almacenado");  
  window.Helpers.ButtonsHelper.init();
  window.Helpers.FormsHelper.init()
<%- end %>