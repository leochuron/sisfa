<%- if @turno.errors.any? %>
  $('#content_modal').html('<%= escape_javascript(render('turno')) %>');
  window.Helpers.FormsHelper.init();
  window.Helpers.AutocompletePaciente.init_autocomplete();
  window.Helpers.AutocompleteDoctor.init_autocomplete();
  <%- @turno.errors.full_messages.each do |msg|%>
    alertify.error("<%=j msg %>");
  <%- end %>
<%- else %>
  $("#myModal").modal("hide");
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
  $(".cantidad_turnos").html('<%= j render 'turnos/doctor_turnos', turnos: @turnos %>');
  alertify.success("Turno Almacenado");  
  window.Helpers.FormsHelper.init();
  window.Helpers.AutocompletePaciente.init_autocomplete();
  window.Helpers.AutocompleteDoctor.init_autocomplete();
  // $this = $('.control-turno[data-id= <%=@turno.doctor.id %>]');
  // $this.find('.t_emitidos').text('<%=@turno.numero %>');
  // $this.find('.t_disponibles').text('<%= @turno.doctor.cantidad_turno - @turno.numero %>');
<%- end %>
