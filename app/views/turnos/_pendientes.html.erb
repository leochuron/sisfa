<ul class="sortable-list">
	<% @no_atendidos.each do |t|  %>
	<li class="sortable-item" data-id = "<%=t.id%>">
		<div class=" col-sx-12 row-fix-div pendientes" data-atendido ="<%=t.atendido%>">
			<div class="row col-md-2 col-xs-2"><span class="fa fa-circle-o"></span></div>
			<div class="row col-md-8 col-xs-8 paciente">
				<h4><%=t.paciente.cliente.nombre%></h4>
				<small class="text-muted">CITA: <%=t.doctor%></small>
			</div>
			<div class="row col-md-2 col-xs-2 hora">
				<span><%=local_date(t.hora, "time")%></span>
			</div>
		</div> 
	</li>
	<% end %>
</ul>
