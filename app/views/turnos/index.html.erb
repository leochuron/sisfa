<div class="container">
	<div class="row turno">
		<h2 class="fix-margin">Emision de Turnos</h2>
	</div>
	<div class="row info-paciente">
		<div class="search">
			<div class="well well-sm">
				<strong>Acciones: </strong>
				<div class="btn-group">
					<%= link_to 'Nuevo',new_turno_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#myModal', class: "nuevo_new btn-xs"}  %>
				</div>
			</div>
		</div>
		<% @doctores.each do |d|  %>
		<div class=" col-md-6 row-fix-div atendidos" data-id = "<%=d[:id]%>">
			<div class="row col-md-2 col-xs-2 hora">
				<span class="t_emitidos"><%= d[:turnos_emitidos]%></span>
				<h6>emitidos</h6>
			</div>
			<div class="row col-md-8 col-xs-8 paciente">
				<h4><%=d[:nombre]%></h4>
				<small><%= d[:especialidad]%></small>
			</div>
			<div class="row col-md-2 col-xs-2 hora">
				<span class="t_disponibles"><%= d[:turnos_disponibles] %></span>
				<h6>disponibles</h6>
			</div>
		</div> 
		<% end %>
	</div>
</div>

