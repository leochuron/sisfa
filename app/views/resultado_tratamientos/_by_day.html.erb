<% @turnos.each do |t|%>
<% if t.atendido == false %>
<h3 class="text-info"><%= t.asignar_horario.paciente.cliente.nombre%><br></h3>
<% h = Horario.find(t.asignar_horario.horario_id)%>
Hora de Terapia: <%= h.hora%><br>
<%= link_to " Registrar Terapia", edit_resultado_tratamiento_path(t), class: "btn btn-xs btn-success" %><br><br>	
<% else %>
<h3 class="text-success"><%= t.asignar_horario.paciente.cliente.nombre%><br></h3>
<% h = Horario.find(t.asignar_horario.horario_id)%>
Hora de Terapia: <%= h.hora%><br>
<%= link_to " Editar", edit_resultado_tratamiento_path(t), class: "btn btn-xs btn-warning" %><br><br>
<% end%>
<% end %>