<%= f.fields_for :informacion_adicional_paciente do |info| %>
<legend>3. Informacion Adicional</legend>
<div class="field">
	<div class="col-md-4">
		<%=  info.label :nacionalidad%>
		<%=  info.select(:nacionalidad, ['Ecuatoriano','Extranjero'], {}, { :class => 'form-control' }) %>
		<%=info.label :raza %>
		<%=info.select :raza, options_for_select(["Indigena","Afroecuatoriano/Afrodesenciende","Negro","Mulato","Montubio","Mestizo","Blanco","Otro"]), {}, { class: "select-servicio form-control"}%>
	</div>
	<div class="col-md-4">
		<%=  info.label :provincia%>
		<%=  info.text_field :provincia, :placeholder => "provincia" %>
		<%=  info.label :canton%>
		<%=  info.text_field :canton, :placeholder => "canton"%>
	</div>
	<div class="col-md-4">
		<%=  info.label :parroquia%>
		<%=  info.text_field :parroquia, :placeholder => "parroquia" %>
	</div>
	<legend>4. Informacion Familiar Cercano</legend>
	<div class="col-md-4">
		<%=  info.label :familiar_cercano%>
		<%=  info.text_field :familiar_cercano, :placeholder => "Nombre Familiar Cercano"%>
		<%=  info.label :familiar_parentesco%>
		<%= info.select(:familiar_parentesco, ['Hijo','Hija','Esposo','Esposa','Madre','Padre'], {}, { :class => 'form-control' }) %>
	</div>
	<div class="col-md-4">
		<%=  info.label :familiar_direccion%>
		<%=  info.text_field :familiar_direccion, :placeholder => "telefono del familiar"%>
		<%=  info.label :familiar_telefono%>
		<%=  info.text_field :familiar_telefono, :placeholder => "telefono del familiar"%>
	</div>
	<div class="col-md-4">
		<%=  info.label :observacion%>
		<%=  info.text_field :observacion, :placeholder => "Descripcion"%>
	</div>
</div>
<% end %>
