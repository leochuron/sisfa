<div class="paciente">
		<div class="fix-margin history-registros">
	<h4 class="text-center">HOSPITAL BASICO 7 BI LOJA</h4>
	</div>
	<div class="fix-margin history-registros">
	<h4>HISTORIA CLINICA # <%= @paciente.n_hclinica%></h4>
	</div>
	<h4 class="fix-margin"><strong><%= @paciente.cliente_nombre %> / <%=@paciente.tipo%> / <%= @paciente.grado %></strong></h4>
	<h5 class="text-rigth fix-margin">Fecha de admision: <%= local_date(@paciente.created_at, "datetime")%></h5>
	<div class="row-fix-div">
		<div class="col-xs-4">
			<strong>DATOS PERSONALES</strong><br>
			<small><strong>C.I: </strong><%= (@paciente.cliente_numero_de_identificacion).upcase%></small><br>
			<small><strong>GENERO: </strong><%= (@paciente.cliente_sexo).upcase%></small><br>
			<small><strong>EDAD:</strong>
				<%= exact_age(@paciente.cliente_fecha_de_nacimiento) %> <small class="text-muted"> / <%= @paciente.cliente_fecha_de_nacimiento %></small>
			</small><br>
			<small><strong>ESTADO CIVIL: </strong><%= @paciente.cliente_estado_civil %></small><br>
			<small><strong>DISCAPACIDAD: </strong><%= @paciente.discapacidad %></small><br>
		</div>
		<div class="col-xs-4">
			<strong>LOCALIZACION</strong><br>
			<small><strong>DIRECCION: </strong><%= (@paciente.cliente_direccion).upcase%></small><br>
			<small><strong>TELEFONO: </strong><%=@paciente.cliente_telefono%></small><br>
		</div>
		<div class="col-xs-4">
			<strong>CONTACTO/RELACION</strong><br>
			<small><strong><%= @paciente.informacion_adicional_paciente.familiar_cercano%> /
				<small class="text-muted"><%= @paciente.informacion_adicional_paciente.familiar_parentesco%></small></strong></small><br>
				<small><strong>DIRECCION: </strong><%= @paciente.informacion_adicional_paciente.familiar_direccion%></small><br/>
				<small><strong>TELEFONO: </strong><%= @paciente.informacion_adicional_paciente.familiar_telefono%></small><br/>
			</div>
		</div>
	</div>
	<div class="row-fix-div">
				<% if @paciente.tipo == "militar" %>
		<div class="col-xs-4">
			<strong>INFORMACION MILITAR</strong><br>
				<small><strong>CODIGO ISSFA: </strong><%= @paciente.codigo_issfa %></small><br>
				<small><strong>ESTADO: </strong><%= @paciente.estado %></small><br/>
				<small><strong>PERTENECE A: </strong><%= @paciente.pertenece_a %></small><br/>
				<small><strong>UNIDAD: </strong><%= @paciente.unidad %></small><br/>
				<small><strong>COMANDANTE: </strong><%= @paciente.jefe_de_reparto %></small><br/>
			</div>
		</div>
		<% end %>
		<% if @paciente.tipo == "familiar" %>
		<div class="col-xs-4">
			<strong>INFORMACION MILITAR</strong><br>
				<small><strong>CODIGO ISSFA: </strong><%= @paciente.codigo_issfa %></small><br>
				<small><strong>PARENTESCO: </strong><%= @paciente.parentesco %></small><br/>
				<small><strong>ESTADO: </strong><%= @paciente.estado %></small><br/>
			</div>
		</div>
		<% end %>
	</div>
	<div class="fix-margin">
		<div class="history-registros">
			ANTECEDENTES
		</div>
		<div class="row">
			<div class="col-xs-6">
				<small><strong>PERSONALES</strong></small><br>
				<%=@paciente.antecedentes_personales%>
			</div>
			<div class="col-xs-6">
				<small><strong>FAMILIARES</strong></small><br>
				<%=@paciente.antecedentes_familiares%>
			</div>
		</div>
	</div>
	<div class=" fix-margin">
		<div class="history-registros">
			REGISTROS MEDICOS
		</div>
		<% @paciente.condicions.each do |r|  %>
		<div class="condiciones">
			<small><strong>Fecha:</strong> <%= local_date(r.created_at, "date")%></small><br>
			<small class="text-info"><%= (r.diagnostico_1).upcase %></small><br>
			<small><strong>Atendido Dr(a): </strong><%= r.medico_asignado %> </small><br>
			<small><strong>Motivo: </strong><%= r.motivo_de_consulta %> </small><br>
		</div>
		<% end %>
	</div>
</div>
