<div class="row title-history">
		<h2 class="fix-margin">H.Clinica: civil</h2>
</div>
<div class="row info-paciente">
	<%= nested_form_for @paciente do |f| %>
	<%= form_errors_for @paciente %>
	<div class="row">
		<div class="col-md-4">
			<%= f.label :n_hclinica, "Historia Clinica #"%>
			<%= f.text_field :n_hclinica  , class: "form-control numero_de_hclinica",required: true%>
			<%= f.hidden_field :tipo %><br>
		</div>
		<div class="col-md-4">
			<%= f.label :discapacidad%>
			<%= f.select(:discapacidad, ['Ninguna','Fisica','Intelectual','Mental', 'Auditiva','Visual','Otra'], {}, { :class => 'form-control' }) %>
		</div>
		<div class="col-md-4">
			<%= f.label :afiliado%>
			<div class="input-group">
				<div id="radioBtn" class="btn-group">
					<a class="btn btn-info btn-sm active" data-toggle="afiliado" data-title="ninguno">NINGUNO</a>
					<a class="btn btn-info btn-sm notActive" data-toggle="afiliado" data-title="IESS">IESS</a>
					<a class="btn btn-info btn-sm notActive" data-toggle="afiliado" data-title="ISSPOL">ISSPOL</a>
					<a class="btn btn-info btn-sm notActive" data-toggle="afiliado" data-title="OTROS">OTROS SEGUROS</a>
				</div>
				<%= f.hidden_field :afiliado, id: "afiliado", value: "ninguno"  %>
			</div>
			<br>
		</div>
	</div>
	<div id="rootwizard">
		<div class="navbar">
			<div class="navbar-inner">
				<ul class="nav nav-pills nav-justified thumbnail setup-panel">
					<li><a href="#tab1" data-toggle="tab">
						<span class ="fa fa-male fa-2x"></span>
						<p class="list-group-item-text">Datos del Paciente</p>
					</a></li>
					<li><a href="#tab3" data-toggle="tab">
						<span class ="fa fa-th-list fa-2x"></span>
						<p class="list-group-item-text">Informacion Adicional</p>
					</a></li>
				</ul>
			</div>
		</div>
		<div class="tab-content row">
			<div class="tab-pane" id="tab1">
				<%= render "pacientes/forms/datos_cliente", f:f  %>
			</div>
			<div class="tab-pane" id="tab3">
				<%= render "pacientes/forms/informacion_adicional", f:f  %>
				<%= f.submit :Guardar, class: "btn btn-success add-margin col-md-offset-3" %>
			</div>
		</div> 
		<% end %>
		<ul class="pager wizard">
			<li class="previous first clickable" style="display:none;"><a>Primero</a></li>
			<li class="previous clickable"><a>Anterior</a></li>
			<li class="next last clickable" style="display:none;"><a>Ultimo</a></li>
			<li class="next clickable"><a>Siguiente</a></li>
		</ul>
	</div>
</div>
