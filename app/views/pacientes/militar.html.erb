<h1>Militar</h1>
<div class="form-militar field">
	<div class="col-md-8">
		<%= nested_form_for @paciente do |f| %>
		<%= form_errors_for @paciente %>
		<%= render "pacientes/forms/datos_cliente", f:f  %>
		<legend>Informacion Militar</legend>
		<%= render "pacientes/forms/datos_militar", f:f  %>
		<legend>Datos Adicionales</legend>
		<%= f.fields_for :informacion_adicional_paciente do |info| %>
		<div class="field">
			<div class="informacion">
				<div class="col-md-4">
					<%=  info.label :ciudad%>
					<%=  info.text_field :ciudad, :placeholder => "ciudad" %>
				</div>
				<div class="col-md-4">
					<%=  info.label :provincia%>
					<%=  info.text_field :provincia, :placeholder => "provincia" %>
				</div>
				<div class="col-md-4">
					<%=  info.label :canton%>
					<%=  info.text_field :canton, :placeholder => "canton"%>
				</div>
			</div>
			<div class="informacion">
				<div class="col-md-6">
					<%=  info.label :jefe_de_reparto%>
					<%=  info.text_field :jefe_de_reparto, :placeholder => "jefe de reparto"%>
				</div>
				<div class="col-md-6">
					<%=  info.label :observacion%>
					<%=  info.text_field :observacion, :placeholder => "observacion"%>
				</div>
			</div>
		</div>
		<% end %>

		<%= f.submit :guardar, class: "btn btn-success" %>
		<% end %>
	</div>
</div>
