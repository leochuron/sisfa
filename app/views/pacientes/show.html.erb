<h3 class="text-center">Historia Clinica # <%= @paciente.n_hclinica%></h3>
<div class="row">
	<p>
		Tipo: <%= @paciente.tipo  %><br>
		Nombre: <%= @paciente.cliente.nombre  %><br>
		C.I: <%= @paciente.cliente.numero_de_identificacion  %><br>
		Edad: <%= @paciente.cliente.edad  %><br>
	</p>
</div>
<div class="row">
	<legend>Registros</legend>
	<table class="table">
		<thead>
			<th>Fecha E/S</th>
			<th>Dias Hosp.</th>
			<th>Medico</th>
			<th>Diag. Ingreso</th>
			<th>Diag. Salida</th>
		</thead>
			<% @paciente.registros.each do |r|  %>
		<tbody>
			<td>
				E: <%=local_date(r.fecha_de_ingreso, "date") %><br>
				S: <%= local_date(r.fecha_de_salida,"date") %></td>
			<td><%= r.dias_hospitalizacion %></td>
			<td><%= r.medico_asignado %></td>
			<td><%= r.diagnostico_ingreso%></td>
			<td><%= r.diagnostico_salida %></td>
		</tbody>
			<% end %>
	</table>
</div>
