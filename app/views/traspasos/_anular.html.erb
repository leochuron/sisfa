<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3 class="modal-title" id="myModalLabel">Anular Transferencia</h3>
</div>
<%= form_tag anulado_traspaso_path do %>
<div class="modal-body ">
	<%= label_tag :razon, "Porque desea anular este transferencia?" %>
	<%= text_area_tag :razon, params[:razon], :required => true, class: "form-control", :placeholder => "Ejm: Producto emitido equivocado" %>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= submit_tag "Anular",data: { confirm: 'Esta seguro?' }, class: "btn btn-danger" %>
</div>
<% end %>
