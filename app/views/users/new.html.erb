<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h3 class= "text-center">Crear Usuarios</h3>
        <%= nested_form_for @user do |f| %>
        <%= f.fields_for :cliente do |cliente_params| %>
        <%=  cliente_params.text_field :nombre, class: "form-control", :placeholder => "Nombres Apellidos" %>
        <% end %>
        <br>
        <%= f.text_field :username, :placeholder => "Nombre de Usuario", class: "form-control" %>
        <br>
        <%= f.select(:rol, ['Administrador', 'Vendedor'], { :prompt => 'Tipo de Usuario'}, { :class => 'form-control' }) %>
        <br>
        <%= f.password_field :password, :placeholder => "Password", class: "form-control" %>
        <br>
        <%= f.password_field :password_confirmation, :placeholder => "Confirmar Password", class: "form-control" %>
        <br>
        <%= f.hidden_field(:cliente_id) %>
        <div class="input-group">
          <%= f.submit :Guardar, class: "crear_nuevo", data: {disable_with: "Almacenando"}%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
