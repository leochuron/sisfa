<legend>Canje de productos</legend>

<strong><%= @actual.producto.nombre %></strong> <small><%= @actual.producto.casa_comercial %></small>

<div class="canje_form">
  <%= select_tag :tipo_canje, "<option value='mismo_producto'>Mismo producto</option><option value='nuevoproducto'>Nuevo producto</option>".html_safe, { :class => "col-md-4 form-control selecttag select_tipo_canje" } %>

  <div class="mismo_producto_wrapper">
    <%= render "ingreso" %>
  </div>

  <div class="nuevo_producto_wrapper" style="display: none;">
   <%= render "producto" %>
  </div>

  <%= javascript_tag do %>
    $(function (){
      window.Helpers.SelectCanje.init();
    });
  <% end %>

</div>
