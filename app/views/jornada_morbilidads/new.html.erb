<% unless @consultas.empty?  %>
<h3 class="text-center"><strong>DOCTOR: </strong><%= @doctor.cliente.nombre  %></h3>
<%= form_for [@doctor, @jornada] do |f| %>
<%= form_errors_for @jornada %>
<ul class="list-inline">
	<li>
		<%= f.label :inicio_atencion%>
		<%= f.text_field :inicio_atencion, class: 'form-control', id: "input_from"%>
	</li>
	<li>
		<%= f.label :fin_atencion%>
		<%= f.text_field :fin_atencion, class: 'form-control', id: "input_to"%>
	</li>
	<li>
		<%= f.submit 'Enviar', class: "btn btn-success"%>			
	</li>
</ul>
<% end %>
<h3>Pacientes de hoy </h3>
<div id="flip-scroll">
<table class="table table-bordered">
	<thead>
		<tr>
			<th>H.Clinica</th>
			<th>Paciente</th>
			<th>Diagnostico</th>
			<th>Codigo</th>			
			<th>Condicion</th>
			<th>Ordenes</th>
		</tr>
	</thead>
	<tbody>
		<% @consultas.each do |c| %>
		<tr>
			<td><%= c.paciente.n_hclinica  %></td>
			<td><%= c.paciente.cliente.nombre  %></td>
			<td><%= c.diagnostico_sindrome  %></td>
			<td><%= c.codigo_cie  %></td>
			<td><%= c.condicion_diagnostico  %></td>
			<td><%= c.ordenes%></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<% else %>
<div class="text-center">
	<i class="fa fa-meh-o fa-4x"></i>
	<h1>No Puedes Enviar Reporte</h1>
	<h4>"No tienes registros de consulta por morbilidad"</h4>
	<link rel="stylesheet" type="text/css" href="">
	<%=link_to("REGRESAR",doctors_dashboard_path, class: "btn btn-primary" )%>
</div>
<% end %>

