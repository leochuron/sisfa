<div class="row col-md-10 shadow col-md-offset-1">
	<div class="col-md-12">
		<div class="title-green-head">
			<span>
				<i><%= link_to "", hospitalizacions_path, title:'Ver Reportes', class: "ttip fa fa-list" %></i>
			</span>
			<h3>Hospitalizados</h3>
			<span class="rev-combo pull-right fecha_sin_hora"></span>
		</div>
	</div>
	<div class="comprobante">
		<%= nested_form_for @hospitalizacion do |f| %>
		<%= form_errors_for @hospitalizacion %>
		<div class="col-md-8">
			<div class="row-fix-div">
				<div class="col-md-3 icon-paciente-center">
					<i class="fa fa-user-md fa-4x"></i><br>
					<small>paciente</small>
				</div>
				<div class="col-md-8">
					<%= f.fields_for :cliente do |cliente_params| %>
					<%=  cliente_params.hidden_field :id, class: "cliente_id" %>
					<%=  cliente_params.text_field :numero_de_identificacion, class: "form-control-border numero_de_identificacion", :placeholder => "Cédula o RUC" %>
					<%=  cliente_params.text_field :nombre, class: "form-control-border nombre", :placeholder => "Nombres Apellidos" %>
					<%=  cliente_params.text_field :direccion, class: "form-control-border direccion", :placeholder => "Dirección"%>
					<%=  cliente_params.text_field :telefono, class: "form-control-border telefono", :placeholder => "Teléfono"%>
					<% end %>
				</div>
			</div>
			<!-- item factura -->
			<div class="table-responsive">
				<table class="table" id="factura">
					<thead>
						<tr>
							<th class="col-sm-4">Producto</th>
							<th>Cantidad</th>
							<th>V.Unit</th>
							<th>I.V.A.</th>
							<th>Total</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<%= f.fields_for :item_hospitalizacions, :wrapper => false do |item| %>
						<tr class="fields">
							<%= render 'item_hospitalizacions/item_hospitalizacion', item:item %>
						</tr>
						<% end %>
						<tr>
							<td><%= f.link_to_add "Producto", :item_hospitalizacions, :class => "nuevo_new_default"%>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<!-- datos de impuestos factura -->
		<div class="col-md-4">
			<div class="form-group">
				<div class="row">
					<div class="col-xs-6">
						<h4>Subtotal 12%: </h4>
					</div>
					<div class="col-xs-6 text-right">
						<h4 class="subtotal_12">00.00 </h4>
					</div>
					<div class="col-xs-6">
						<h4>Subtotal 0%: </h4>
					</div>
					<div class="col-xs-6 text-right">
						<h4 class="subtotal_0">00.00 </h4>
					</div>
					<div class="col-xs-6">
						<h4>Iva 12%: </h4>
					</div>
					<div class="col-xs-6 text-right">
						<h4 class="iva_factura">00.00 </h4>
					</div>
					<div class="col-xs-6">
						<h4>TOTAL: </h4>
					</div>
					<div class="col-xs-6 text-right">
						<h4 class="total_factura">00.00 </h4>
					</div>
				</div>
			</div>
			<%= f.submit :Guardar, class: "btn btn-block btn-success", data: {disable_with: "Almacenando"}%>
		</div>
		<% end %>
	</div>
	<div class ="col-md-3 col-md-offset-10">
		<%= link_to "Ver Registros", hospitalizacions_path, class: "atras_back" %>
	</div>
</div>

