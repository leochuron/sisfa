<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3 class="modal-title" id="myModalLabel">Anular Factura<span class="text-right"> NÂº<%= @factura.numero%></span></h3>
</div>
<div class="modal-body ">
  <%= form_tag anulado_factura_path do %>
    <%= label_tag :razon %>
    <%= text_field_tag :razon, params[:razon], :required => true, class: "form-control" %>
    <%= submit_tag "Anular", :remote => true, data: {disable_with: "Anulando..."}, class: "btn btn-danger" %>
  <% end %>
  <%= render "factura" %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
</div>
