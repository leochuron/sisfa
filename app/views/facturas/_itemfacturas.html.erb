<td>
	<input type="text" id="codigo" class= "form-control">
</td>
<td>
	<input type="text" id="producto" class= "form-control autocomplete_producto">
</td>
<td>
  <%= item_factura.hidden_field :id %>
	<%=  item_factura.number_field  :cantidad, class: "form-control cantidad", :placeholder => "0", min: "1" %>
</td>
<td>
	<%=  item_factura.text_field :valor_unitario, class: "form-control", :placeholder => "0", min: "0", :readonly => true %>
</td>
<td>
	<%=  item_factura.text_field :descuento, class: "form-control", :placeholder => "Desct." %>
</td>
<td>
	<%=  item_factura.text_field :iva, class: "form-control", :placeholder => "0.0", :readonly => true %>
</td>
<td>
	<%=  item_factura.text_field :total, class: "form-control", :placeholder => "Total", :readonly => true %>
</td>
<td><%= item_factura.link_to_remove 'Producto', :class => "delete_destroy" %></td>