<h1>Facturas del Mes Ventanilla</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>NÂº Factura</th>
      <th>Cliente/Proveedor</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @facturasmes.each do |factura| %>
    <tr>
      <td><%= factura.numero %></td>
      <% if factura.cliente.nil?%>
      <td><%= factura.proveedor.nombre_o_razon_social%></td>
      <% else %>
      <td><%= factura.cliente.nombre%></td>
      <% end %>
      <td><%= factura.total %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<td><%= link_to 'Create PDF', :format => :pdf %></td>

