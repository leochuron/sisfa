<h3 class="text-center">REPORTE DE CIERRE DE CAJA:</h3>
<div class="fix-margin">
	<h5>Fecha: <%= local_date(Time.now, "date") %></h5>
	<h5>Usuario: <%= current_user.username %></h5>
	<h5>Rol: <%= current_user.rol.nombre %></h5>
</div>
<div class="col-md-2">
	<table class="table table-print">
		<thead>
			<tr>
				<th>Impuestos</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Subtotal 12%:</td>
				<td><%= redondear(@ventanilla_subtotal12) %></td>
			</tr>			
			<tr>
				<td>Subtotal 0%:</td>
				<td><%= redondear(@ventanilla_subtotal) %></td>
			</tr>
			<tr>
				<td>Iva:</td>
				<td><%= redondear(@ventanilla_iva) %></td>
			</tr>
			<tr>
				<td><strong>Total</strong></td>
				<td><strong><%= redondear(@ventanilla_total) %></strong></td>
			</tr>
		</tbody>
	</table>
</div>
<h5 class="fix-margin text-center">Resumen de Facturas</h5>
<div class="col-md-8">
	<table class="table table-print">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Cliente</th>
				<th>Sub 12%</th>
				<th>Sub 0%</th>
				<th>Iva</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			<% @facturas.each do |factura|  %>
			<tr>
				<td><%= factura.numero %></td>
				<td><%= factura.cliente.nombre %></td>
				<td><%= factura.subtotal_12 %></td>
				<td><%= factura.subtotal_0 %></td>
				<td><%= factura.iva %></td>
				<td><%= factura.total %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

