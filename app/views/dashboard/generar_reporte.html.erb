      </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Nº Total de Reportes: <%= @search.count%> </h4>
   <h4>Nº Total de Venta: <%= '%.2f' % @search.sum(:total)%> </h4>
  <%when "compra"%>
