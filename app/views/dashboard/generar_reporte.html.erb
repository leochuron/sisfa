<% if @search.empty? %>
  <h3>No se encontro ninguna factura</h3>
<% else %>
  <h3>Reporte de Facturas  de <%= @tipo_factura%>  desde:</h3>
  <h4><%= @start_date%> hasta <%= @end_date%></h4>
  <%case @tipo_factura%>
  <%when "ventanilla"%>
  <table class="table table-hover table-print">
    <thead>
      <tr>
        <th>Nº Factura</th>
        <th>Cliente</th>
        <th>Dirección</th>
        <th>Vendedor</th>
        <th>Fecha</th>
        <th>Sub Total</th>
        <th>IVA</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @search.each do |factura| %>
      <tr>
        <td><%= factura.numero %></td>
        <td><%= factura.cliente.nombre%></td>
        <td><%= factura.cliente.direccion %></td>
        <td><%= factura.user.username %></td>
        <td><%= factura.created_at.to_s(:db) %></td>
        <td><%= factura.subtotal_12%></td>
        <td><%= factura.iva%></td>
        <td><%= factura.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Nº Total de Facturas: <%= @search.count%> </h4>
   <h4>Nº Total de Venta: <%= @search.sum(:total)%> </h4>

  <%when "hospitalizacion"%>
  <table class="table table-hover table-print">
    <thead>
      <tr>
        <th>Nº Factura</th>
        <th>Cliente</th>
        <th>Dirección</th>
        <th>Servicio</th>
        <th>Rango</th>
        <th>Vendedor</th>
        <th>Fecha</th>
        <th>Sub Total</th>
        <th>IVA</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @search.each do |factura| %>
      <tr>
        <td><%= factura.numero %></td>
        <td><%= factura.cliente.nombre%></td>
        <td><%= factura.cliente.direccion %></td>
        <td> aki va servicio</td>
        <td> aki va rango</td>
        <td><%= factura.user.username %></td>
        <td><%= factura.created_at.to_s(:db) %></td>
        <td><%= factura.subtotal_12 %></td>
        <td><%= factura.iva %></td>
        <td><%= factura.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Nº Total de Facturas: <%= @search.count%></h4>
  <h4>Nº Total de Venta: <%= '%.2f' % @search.sum(:total)%></h4>


  <% when "consulta_externa"%>
