<div class="row col-md-8 estadisticas" id="reportes">
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Ventas y Compras</h3>
			</div><!-- end panel-heading -->	
			<div class="panel-body">
				<%= form_tag dashboard_generar_reporte_path do %>
				<%= select_tag :tipo_factura, "<option value='ventanilla'>Ventanilla</option><option value='hospitalizacion'>Hospitalizaci√≥n</option><option value='compra'>Compra</option>".html_safe, { :class => "col-md-4 form-control selecttag" } %> <br />	
				<span class="fa fa-calendar"></span>
				<%= text_field_tag :fecha_inicial, params[:fecha_inicial], :class => "form-control-border datepicker", placeholder: "Fecha de inicio" %><br><br>
				<span class="fa fa-calendar"></span>
				<%= text_field_tag :fecha_final, params[:fecha_final], :class => "form-control-border datepicker", placeholder: "Fecha final" %><br><br>
				<%= submit_tag "Imprimir", :name => nil, :class => "btn btn-block btn-info"%>
				<% end %>
			</div>
		</div><!-- end panel -->
	</div><!-- end venta y compra -->
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Cierre de Caja</h3>
			</div><!-- end panel-heading -->
			<div class="panel-body">												
				<h5>Ingrese Fecha (mes):</h5>
				<%= form_tag dashboard_reportes_cierre_caja_mensual_path, method: :get do %>
				<div class="input-group field">
					<%= text_field_tag :fecha, params[:fecha],:class =>" datepicker_month", :placeholder => "Fecha"%>
					<span class="input-group-btn">
						<%= submit_tag "Ir", name: nil, :class => "btn btn-info" %>
					</span>
				</div>
				<% end %>
				<h5>Ingrese Fecha (dia):</h5>
				<%= form_tag dashboard_reportes_cierre_caja_path, method: :get do %>
				<div class="input-group field">
					<%= text_field_tag :fecha, params[:fecha],:class =>"datepicker", :placeholder => "Fecha"%>
					<span class="input-group-btn">
						<%= submit_tag "Ir", name: nil, :class => "btn btn-info" %>
					</span>
				</div>
				<% end %>
			</div>
		</div><!-- end panel -->
	</div><!-- end cierre de caja -->
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Liquidaciones</h3>
			</div><!-- end panel-heading -->
			<div class="panel-body">																
				<h5>Ingrese Mes:</h5>
				<div class="input-group">
					<input type="text" placeholder="Fecha" class=" datepicker form-control">
					<span class="input-group-btn">
						<button class="btn btn-info" type="button">Ir</button>
					</span>
				</div>
			</div>
		</div><!-- end panel -->
	</div><!-- end liquidaciones -->
</div>
