<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3 class="modal-title" id="myModalLabel">VENTAS DE HOY</h3>
</div>
<div class="modal-body">
  <div class="table-responsive">
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th></th>
          <th>VENTANILLA</th>
          <th>HOSPITALIZACION</th>
          <th>CONSULTA</th>
          <th>TOTAL</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>TOTAL DE FACTURAS:</td>
          <td><%= @cantidad_dia_ventanilla %></td>
          <td><%= @cantidad_dia_hospitalizacion %></td>
          <td><%= @cantidad_dia_consultaexterna %></td>
          <td><%= @cantidadfacturashoy %></td>
        </tr>
        <tr>
          <td>TOTAL IVA:</td>
          <td><%= '%.2f' % @ventanilla_iva %></td>
          <td><%= '%.2f' % @hospitalizacion_iva %></td>
          <td><%= '%.2f' % @consultaexterna_iva %></td>
          <td><%= '%.2f' % @total_iva %></td>
        </tr>
        <tr>
          <td>TOTAL VENTAS:</td>
          <td><%= @totaldia_ventanilla %></td>
          <td><%= @totaldia_hospitalizacion %></td>
          <td><%= @totaldia_consultaexterna %></td>
          <td><%= @totalfacturashoy %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  <%= link_to ' Imprimir', {:format => :pdf} , {:class => "btn btn-success", :target => "_blank"} %>  
</div>
