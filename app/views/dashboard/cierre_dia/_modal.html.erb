<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3 class="modal-title" id="myModalLabel">VENTAS DE HOY</h3>
</div>
<div class="modal-body">
	<% if  @totalfacturas == 0  and @totalhospitalizacion == 0 %>
	<h3>No has facturado nada Aun!..</h3>
	<% else %>
	<div class="row">
		<div class="col-md-6 text-center col-sm-12">
			<h6 class="text-muted">TOTAL DEL DIA:</h6>
			<h1 class="total-num">$ <%= redondear(@total_ventanilla) %></h1>
		</div>
		<div class="col-md-6">
			<h6>Facturas Emitidas: <strong><%= @cantidad_ventanilla %></strong></h6>
			<h6>Subtotal: <strong><%= redondear(@ventanilla_subtotal) %></strong> </h6>
			<h6>Iva: <strong><%= redondear(@ventanilla_iva) %></strong> </h6>
		</div>
		<div>
		</div>
	</div>
	<% end %>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	<%= link_to ' Imprimir', {:format => :pdf} , {:class => "btn btn-success", :target => "_blank"} %>
</div>
