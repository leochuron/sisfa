<h2 class="text-center">LIQUIDACIÓN</h2>
<h4 class="text-center"> <%= month_name(@fecha) %></h4>
<div class="row  page-break">
	<h5 class= "fix-margin"><strong>Fecha de Impresión:  </strong><span class="fecha_sin_hora"></span></h5>
	<div class="col-md-3 col-xs-3">
		<h4>Resumen General Ventas</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Tipo</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Ventanilla:</td>
					<td><%= redondear(@ventanilla_subtotal) %></td>
				</tr>
				<tr>
					<td>Hospitalización:</td>
					<td><%= redondear(@hospitalizacion_subtotal) %></td>
				</tr>
				<tr>
					<td>Transferencias:</td>
					<td><%= redondear(@transferencia_subtotal) %></td>
				</tr>
				<tr>
					<td><strong>Total Ventas:</strong></td>
					<td><%= redondear(@comprobantes_subtotal) %></td>
				</tr>
				<tr>
					<td><strong>Total Iva:</strong></td>
					<td><%= redondear(@comprobantes_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><%= redondear(@comprobantes_total) %></td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="col-md-3 col-xs-3">
		<h4>Ventas en ventanilla</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@ventanilla_subtotal) %></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@ventanilla_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total</strong></td>
					<td><strong><%= redondear(@ventanilla_total) %></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Número de Facturas Emitidas: <strong><%= @ventanilla_cantidad%></strong></small><br/>
		<small>Número de Facturas Anuladas: <strong><%= @anuladas_ventanilla%></strong></small>
	</div>

	<div class="col-md-3 col-xs-3">
		<h4>Ventas por hospitalización</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@hospitalizacion_subtotal)%></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@hospitalizacion_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><strong><%= redondear(@hospitalizacion_total)%></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Reportes Emitidos: <strong><%= @hospitalizacion_cantidad%></strong></small>
	</div>

	<div class="col-md-3 col-xs-3">
		<h4>Transferencias</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@transferencia_subtotal) %></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@transferencia_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><strong><%= redondear(@transferencia_total) %></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Número de Transferencias: <strong><%= @transferencia_cantidad%></strong></small>
	</div>
</div>
<div class="row page-break">
	<div class="col-md-8">
		<h4>Listado de Ingreso (Compras)</h4>	
		<small>Facturas Ingresadas: <strong><%= @compras_cantidad%></strong></small><br/>
		<table class="table">
			<thead>
				<tr>
					<th>Nº Factura</th>
					<th>Proveedor</th>
					<th>Sub Total</th>
					<th>IVA</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<% @compra.each do |factura| %>
				<tr>
					<td><%= factura.numero %></td>
					<td><%= factura.proveedor.nombre_o_razon_social%></td>
					<td><%= redondear(factura.subtotal_0)%></td>
					<td><%= redondear(factura.iva) %></td>
					<td><%= redondear(factura.total) %></td>
				</tr>
				<% end %>
				<tr>
					<td></td>
					<td><strong>TOTAL:</strong></td>
					<td><%= redondear(@compra_subtotal) %></td>
					<td><%= redondear(@compra_iva) %></td>
					<td><%= redondear(@compra_total) %></td>
				</tr>
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<h4 class= "fix-margin">Firmas:</h4>
	<%= form_tag do %>
	<div class="col-md-3 field">
		<span class="input-group-btn"><button type="button" class="btn btn-default btn-add">+</button></span><br>	
		<%= text_field_tag :nombre, params[:nombre], placeholder: "Nombre del Responsable" %>
		<%= text_field_tag :cargo, params[:cargo], placeholder: "Cargo del Responsable" %>
	</div>
	<% end %>
</div>
<%= link_to ' Imprimir', {:format => :pdf} , {:class => "btn btn-info", :target => "_blank"} %>
