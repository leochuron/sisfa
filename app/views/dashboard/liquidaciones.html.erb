<h2 class="text-center">LIQUIDACION</h2>
<h4 class="text-center"> <%= month_name(@fecha) %></h4>
<div class="row">
	<h5 class= "fix-margin"><strong>Fecha de Impresion:  </strong><span class="fecha_sin_hora"></span></h5>
	<div class="col-md-3">
		<h4>Resumen General Ventas</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Tipo</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Ventanilla:</td>
					<td><%= redondear(@ventanilla_subtotal) %></td>
				</tr>
				<tr>
					<td>Hospitalizacion:</td>
					<td><%= redondear(@hospitalizacion_subtotal) %></td>
				</tr>
				<tr>
					<td>Transferencias:</td>
					<td><%= redondear(@transferencias_subtotal) %></td>
				</tr>
				<tr>
					<td><strong>Total Ventas:</strong></td>
					<td><%= redondear(@subtotal_ventas) %></td>
				</tr>
				<tr>
					<td><strong>Total Iva:</strong></td>
					<td><%= redondear(@iva_ventas) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><%= redondear(@total_ventas) %></td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="col-md-3">
		<h4>Ventas en ventanilla</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@ventanilla_subtotal) %></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@ventanilla_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total</strong></td>
					<td><strong><%= redondear(@total_ventanilla) %></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Numero de Facturas Emitidas: <strong><%= @cantidad_ventanilla%></strong></small><br/>
		<small>Numero de Facturas Anuladas: <strong><%= @anuladas_ventanilla%></strong></small>
	</div>

	<div class="col-md-3">
		<h4>Ventas por hospitalizacion</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@hospitalizacion_subtotal)%></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@hospitalizacion_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><strong><%= redondear(@total_hospitalizacion)%></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Reportes Emitidos: <strong><%= @cantidad_hospitalizacion%></strong></small>
	</div>

	<div class="col-md-3">
		<h4>Transferencias</h4>	
		<table class="table">
			<thead>
				<tr>
					<th>Impuestos</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Subtotal:</td>
					<td><%= redondear(@transferencias_subtotal) %></td>
				</tr>
				<tr>
					<td>Iva:</td>
					<td><%= redondear(@transferencias_iva) %></td>
				</tr>
				<tr>
					<td><strong>Total:</strong></td>
					<td><strong><%= redondear(@total_transferencias) %></strong></td>
				</tr>
			</tbody>
		</table>
		<small>Numero de Transferencias: <strong><%= @numero_transferencias%></strong></small>
	</div>
</div>
<div class="row">
	<div class="col-md-8">
		<h4>Listado de Ingreso (Compras)</h4>	
    <small>Facturas Ingresadas: <strong><%= @compras.count%></strong></small><br/>
    <table class="table">
      <thead>
        <tr>
          <th>NÂº Factura</th>
          <th>Proveedor</th>
          <th>Sub Total</th>
          <th>IVA</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @compras.each do |factura| %>
        <tr>
          <td><%= factura.numero %></td>
          <td><%= factura.proveedor.nombre_o_razon_social%></td>
          <td><%= redondear(factura.subtotal_0)%></td>
          <td><%= redondear(factura.iva) %></td>
          <td><%= redondear(factura.total) %></td>
        </tr>
        <% end %>
        <tr>
        	<td></td>
        	<td><strong>TOTAL:</strong></td>
        	<td><%= redondear(@compras.sum(:subtotal_0)) %></td>
        	<td><%= redondear(@compras.sum(:iva)) %></td>
        	<td><%= redondear(@compras.sum(:total)) %></td>
        </tr>
      </tbody>
    </table>
	</div>
</div>
<div class="row">
	<h4 class= "fix-margin">Firmas:</h4>
	<%= form_tag do %>
	<div class="col-md-3 field">
		<%= text_field_tag :nombre, params[:nombre], placeholder: "Nombre del Responsable" %>
		<%= text_field_tag :cargo, params[:cargo], placeholder: "Cargo del Responsable" %>
	</div>
	<% end %>
</div>
