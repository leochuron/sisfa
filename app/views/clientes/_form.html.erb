<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h1 class="modal-title" id="myModalLabel">Nuevo cliente</h1>
</div>
<%= form_for(@cliente, :remote => true) do |f| %>
<div class="modal-body">
  <%= f.label :nombre %>
  <%= f.text_field :nombre, class: "form-control", required:true %>
  <%= f.label :numero_de_identificacion %>
  <%= f.text_field :numero_de_identificacion, class: "form-control", required:true%>
  <%= f.label :direccion %>
  <%= f.text_field :direccion, class: "form-control"%>
  <%= f.label :telefono %>
  <%= f.text_field :telefono, class: "form-control"%>
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control"%>
 
</div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  <%= f.submit 'Guardar', class: "btn btn-success"%>
</div>
<% end %>
