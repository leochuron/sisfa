<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3 class="modal-title" id="myModalLabel">Factura<span class="text-right"> NÂº<%= @factura.numero%></span></h3>
</div>
<div class="modal-body">
  <p>
    <strong>Proveedor:</strong>
    <%= @factura.proveedor.nombre_o_razon_social%>
  </p>
  <p>
    <strong>Fecha de Ingreso:</strong>
    <%= local_date(@factura.fecha_de_emision, "date")%>
  </p>
  <table class="table table-hover">
    <thead class= "well">
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Iva</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @factura.factura_compras_productos.each do |i| %>
      <tr>
        <td><%= i.producto.nombre %></td>
        <td><%= i.cantidad %></td>
        <td><%= i.valor_unitario %></td>
        <td><%= i.iva %></td>
        <td><%= i.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-6 text-right">
      <p>
        <strong>
          Subtotal 12%: <br>
          Subtotal 0%: <br>
          IVA: <br>
          Total: <br>
        </strong>
      </p>
    </div>
    <div class="col-xs-2">
      <strong>
        $ <%= @factura.subtotal_12 %><br>
        $ <%= @factura.subtotal_0 %><br>
        $ <%= @factura.iva %><br>
        $ <%= @factura.total %><br>
      </strong>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
</div>
