<div class="container">
  <div class="row">
    <h3 class="text-center">
      <%= wicked_pdf_image_tag "/images/logo1.png", width: 45, height: 45 %>
      HOSPITAL BÁSICO 7 B.I LOJA</h3>
    <div class="col-xs-8">
      <h4>Factura de compra: #<%= @factura.numero%></h4>
      <h4>Proveedor: <%= @factura.proveedor.nombre_o_razon_social%></h4>
      <p>
        C.I o R.U.C: <%= @factura.proveedor.numero_de_identificacion%><br>
        Direccion: <%= @factura.proveedor.direccion%><br>
        Telefono: <%= @factura.proveedor.telefono%><br>
      </p>
      <h3>
    </div>
  </div>
  <table class="table table-bordered">
    <thead class="well">
      <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Iva</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @factura.factura_compras_productos.each do |item| %>
      <tr>
        <td><%= item.producto.nombre%></td>
        <td><%= item.cantidad %></td>
        <td><%= item.valor_unitario %></td>
        <td><%= item.iva %></td>
        <td class="text-right"><%= item.total %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row text-right">
    <div class="col-xs-2 col-xs-offset-8">
      <p>
        <strong>
          Sub 12%: <br>
          Sub 0%: <br>
          IVA : <br>
          Total : <br>
        </strong>
      </p>
    </div>
    <div class="col-xs-2">
      <strong>
        $ <%= @factura.subtotal_12 %><br>
        $ <%= @factura.subtotal_0 %><br>
        $ <%= @factura.iva %><br>
        $ <%= @factura.total %><br>
      </strong>
    </div>
  </div>
</div>
<div class="firma fix-margin">
  <small>-------------------------</small>
  <h5>Recibido Por:</h5>
</div>
<small class="text-muted"> *Documento de uso interno del Hospital Básico 7 B.I Loja</small>
